<% layout("layouts/boilerplate") %>

    <section class="rig_container">
        <div class="content">
            <h1 class="title">
                <%= right.name %>
            </h1>
            <p class="description">
                <%= right.description %>
            </p>
            <a href="<%= right.sourceLink %>" target="_blank" class="learn-more-btn">
                Learn More →
            </a>
        </div>
    </section>

    <!-- ✅ Import Poppins from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        /* rig_Container Styling */
        .rig_container {
            width: 100%;
            max-width: 800px;
            background: rgba(255, 255, 255, 0.1);
            padding: 40px;
            margin: 40px auto;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: fadeInUp 1s forwards;
        }

        .rig_container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
        }

        /* Title Styling */
        .title {
            font-size: 2.8rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 16px;
            line-height: 1.2;
            letter-spacing: -0.5px;
        }

        /* Description Styling */
        .description {
            font-size: 1.2rem;
            font-weight: 400;
            color: #cccccc;
            margin-bottom: 24px;
            line-height: 1.6;
        }

        /* Button Styling */
        .learn-more-btn {
            display: inline-block;
            padding: 14px 36px;
            background-color: #7b1fa2;
            color: #ffffff;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
            box-shadow: 0 4px 12px rgba(123, 31, 162, 0.3);
        }

        .learn-more-btn:hover {
            background-color: #9c27b0;
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(123, 31, 162, 0.5);
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Styling */
        @media (max-width: 768px) {
            .rig_container {
                padding: 24px;
            }

            .title {
                font-size: 2.2rem;
            }

            .description {
                font-size: 1rem;
            }

            .learn-more-btn {
                padding: 12px 28px;
            }
        }
    </style>