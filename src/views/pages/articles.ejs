<% layout("layouts/boilerplate") %>

    <style>
        .legal {
            max-width: 800px;
            margin: 40px auto;
            padding: 24px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.2);
        }

        /* âœ… Title Styling */
        h1 {
            font-size: 2.5rem;
            color: #ffffff;
            text-align: center;
            margin-bottom: 24px;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        /* âœ… Search Bar Styling */
        #search-container {
            text-align: center;
            margin-bottom: 24px;
        }

        #search-input {
            padding: 12px 16px;
            border: 1px solid #555;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            font-size: 16px;
            width: 70%;
            outline: none;
            transition: border-color 0.3s ease;
        }

        #search-input::placeholder {
            color: #aaa;
        }

        #search-input:focus {
            border-color: #9c27b0;
        }

        #search-button {
            background: #7b1fa2;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            margin-left: 10px;
            transition: background-color 0.3s ease;
        }

        #search-button:hover {
            background: #9c27b0;
        }

        /* âœ… Article Card Styling */
        .article {
            background: rgba(255, 255, 255, 0.05);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 16px;
            transition: transform 0.3s ease, background-color 0.3s ease;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .article:hover {
            background-color: rgba(255, 255, 255, 0.08);
            transform: translateY(-4px);
        }

        .article h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 8px;
        }

        .article p {
            font-size: 1rem;
            color: #ddd;
            line-height: 1.6;
            margin-bottom: 12px;
        }

        .article a {
            color: #9c27b0;
            text-decoration: none;
            font-weight: 500;
            border-bottom: 1px solid #9c27b0;
            transition: color 0.3s ease;
        }

        .article a:hover {
            color: #b366cc;
            border-bottom-color: #b366cc;
        }

        /* âœ… Responsive Styling */
        @media (max-width: 768px) {
            #search-input {
                width: 100%;
                margin-bottom: 10px;
            }

            #search-button {
                width: 100%;
                margin-left: 0;
            }

            h1 {
                font-size: 2rem;
            }
        }
    </style>

    <section class="container legal">
        <h1>ðŸ“„ Legal Articles</h1>

        <!-- âœ… Search Bar -->
        <div id="search-container">
            <input type="text" id="search-input" placeholder="Search Legal Articles..." />
            <button id="search-button">Search</button>
        </div>

        <!-- âœ… Articles List -->
        <div class="articles-list">
            <% articles.forEach(article=> { %>
                <div class="article">
                    <h2>
                        <%= article.title %>
                    </h2>
                    <p>
                        <%= article.content.substring(0, 150) %>...
                    </p>
                    <a href="/api/articles/<%= article._id %>">Read More â†’</a>
                </div>
                <% }) %>
        </div>
    </section>

    <!-- âœ… JavaScript Search Functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('search-input');
            const searchButton = document.getElementById('search-button');
            const articles = document.querySelectorAll('.article');

            // âœ… Function to filter articles
            function filterArticles() {
                const query = searchInput.value.toLowerCase();

                articles.forEach(article => {
                    const title = article.querySelector('h2').innerText.toLowerCase();
                    const content = article.querySelector('p').innerText.toLowerCase();

                    if (title.includes(query) || content.includes(query)) {
                        article.style.display = 'block';
                    } else {
                        article.style.display = 'none';
                    }
                });
            }

            // âœ… Search on input change (Debounce Effect)
            let debounceTimer;
            searchInput.addEventListener('input', () => {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(filterArticles, 300);
            });

            // âœ… Search on button click
            searchButton.addEventListener('click', filterArticles);

            // âœ… Allow pressing "Enter" to search
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    filterArticles();
                }
            });
        });
    </script>